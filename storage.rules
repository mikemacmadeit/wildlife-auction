rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is an admin (prefer custom claims; fall back to user doc role)
    function isAdmin() {
      return isAuthenticated() && (
        request.auth.token.role == 'admin' ||
        request.auth.token.role == 'super_admin' ||
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role in ['admin', 'super_admin']
      );
    }

    function isListingOwner(listingId) {
      return isAuthenticated() &&
        firestore.get(/databases/(default)/documents/listings/$(listingId)) != null &&
        firestore.get(/databases/(default)/documents/listings/$(listingId)).data.sellerId == request.auth.uid;
    }
    
    // ============================================
    // LISTING IMAGES
    // ============================================
    // Path: listings/{listingId}/images/{imageId}.webp
    match /listings/{listingId}/images/{imageId} {
      // Allow read: Public read - images are public for browsing
      allow read: if true;
      
      // P0: owner/admin only. Prevent cross-tenant writes.
      allow write: if isListingOwner(listingId) || isAdmin();
      
      allow delete: if isListingOwner(listingId) || isAdmin();
    }

    // ============================================
    // USER UPLOADS (Uploads Library)
    // ============================================
    // Path: users/{uid}/uploads/{photoId}/{filename}
    // P0: Users can only read/write their own uploads.
    match /users/{userId}/uploads/{photoId}/{fileName} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() && request.auth.uid == userId;
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // ============================================
    // LISTING DOCUMENTS (Compliance Documents)
    // ============================================
    // Path: listings/{listingId}/documents/{docId}/{filename}
    match /listings/{listingId}/documents/{docId}/{fileName} {
      // P0: Compliance documents must not be publicly readable.
      allow read: if isListingOwner(listingId) || isAdmin();
      
      // Owner/admin only.
      allow write: if isListingOwner(listingId) || isAdmin();
      
      allow delete: if isListingOwner(listingId) || isAdmin();
    }
    
    // ============================================
    // ORDER DOCUMENTS (Transfer Approvals, etc.)
    // ============================================
    // Path: orders/{orderId}/documents/{docId}/{filename}
    match /orders/{orderId}/documents/{docId}/{fileName} {
      // Allow read: Order buyer, seller, or admin
      allow read: if isAuthenticated() && (
        firestore.get(/databases/(default)/documents/orders/$(orderId)).data.buyerId == request.auth.uid ||
        firestore.get(/databases/(default)/documents/orders/$(orderId)).data.sellerId == request.auth.uid ||
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role in ['admin', 'super_admin']
      );
      
      // Allow write: Order buyer or seller
      allow write: if isAuthenticated() && (
        firestore.get(/databases/(default)/documents/orders/$(orderId)) != null &&
        (firestore.get(/databases/(default)/documents/orders/$(orderId)).data.buyerId == request.auth.uid ||
         firestore.get(/databases/(default)/documents/orders/$(orderId)).data.sellerId == request.auth.uid)
      );
      
      // Allow delete: Order buyer, seller, or admin
      allow delete: if isAuthenticated() && (
        (firestore.get(/databases/(default)/documents/orders/$(orderId)) != null &&
         (firestore.get(/databases/(default)/documents/orders/$(orderId)).data.buyerId == request.auth.uid ||
          firestore.get(/databases/(default)/documents/orders/$(orderId)).data.sellerId == request.auth.uid)) ||
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role in ['admin', 'super_admin']
      );
    }
    
    // ============================================
    // USER PROFILE IMAGES (Future - P1)
    // ============================================
    // match /users/{userId}/profile/{imageId} {
    //   allow read: if true; // Public read
    //   allow write: if isAuthenticated() && request.auth.uid == userId;
    //   allow delete: if isAuthenticated() && request.auth.uid == userId;
    // }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
